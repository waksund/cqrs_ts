{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "incremental": true,
    "target": "ESNext",
    "newLine": "LF",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "@cfg/*": ["./common/config/*"],
      "@cmn/*": ["./common/*"],

      "@spaghetti/*": ["./apps/spaghetti/src/*"],
      "@services-write/*": ["./apps/services-write/src/*"],
      "@services-read/*": ["./apps/services-read/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "ormconfig.ts"
  ]
}
